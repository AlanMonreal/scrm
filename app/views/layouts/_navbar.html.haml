%nav.navbar.navbar-default{class: "#{navbar_type}"}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{data:{target:"#navbar", toggle:"collapse"},"aria-controls": "navbar", "aria-expanded":false, type:"button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'SCRM', root_path, class:'navbar-brand pull-left'
    #navbar.navbar-collapse.collapse
      .navbar-header-right
        %ul.nav.navbar-nav.navbar-right
          - if current_user
            %li.dropdown
              %a.dropdown-toggle{href:'#', data:{toggle:'dropdown'}}
                = current_user.person.full_name
                %span.caret
              %ul.dropdown-menu
                %li= link_to t('devise.sessions.sign_out'), destroy_user_session_path, method: :delete
          - else
            %li= link_to t('devise.sessions.sign_in'), new_user_session_path
