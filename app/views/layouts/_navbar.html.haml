%nav.navbar.navbar-expand-lg.navbar-light.bg-light{class: "#{navbar_type}"}
  = link_to 'SCRM', root_path, class:'navbar-brand'
  %button.navbar-toggler{data:{target: '#navbar', toggle: 'collapse'}}
    %span.navbar-toggler-icon
  #navbar.collapse.navbar-collapse
    %ul.navbar-nav.ml-auto
      -if current_user
        %li.nav-item.dropdown
          %a.nav-link.dropdown-toggle{data:{toggle:'dropdown'}}
            = current_user.person.full_name
          .dropdown-menu
            %li= link_to t('devise.sessions.sign_out'), destroy_user_session_path, method: :delete
      -else
        %li= link_to t('devise.sessions.sign_in'), new_user_session_path
