= form_for @account, html:{class:'form-horizontal'} do |f|
  .card-block
    .row
      .col-sm-6
        = form_group_for f, :name do
          .col-sm-8
            = f.text_field :name, class: 'form-control'
      .col-sm-6
        = form_group_for f, :number do
          .col-sm-8
            = f.text_field :number, class: 'form-control'
    .row
      .col-sm-6
        = form_group_for f, :email do
          .col-sm-8
            = f.email_field :email, class: 'form-control'
      .col-sm-6
        = form_group_for f, :website do
          .col-sm-8
            = f.text_field :website, class: 'form-control'
    .row
      .col-sm-6
        = form_group_for f, :phone do
          .col-sm-8
            = f.text_field :phone, class: 'form-control'
      .col-sm-6
        = form_group_for f, :extension do
          .col-sm-8
            = f.text_field :extension, class: 'form-control'
    .row
      .col-sm-6
        = form_group_for f, :industry do
          .col-sm-8
            = f.text_field :industry, class: 'form-control'
      .col-sm-6
        = form_group_for f, :rating do
          .col-sm-8
            = options_for_t_enum(f, :rating)
    .row
      .col-sm-6
        = form_group_for f, :ownership do
          .col-sm-8
            = options_for_t_enum(f, :ownership)
      .col-sm-6
        = form_group_for f, :priority do
          .col-sm-8
            = options_for_t_enum(f, :priority)
    .row
      .col-sm-6
        = form_group_for f, :employees do
          .col-sm-8
            = options_for_t_enum(f, :employees)
      .col-sm-6
        = form_group_for f, :locations do
          .col-sm-8
            = f.number_field :locations, min:0, class: 'form-control'
    .row
      .col-sm-6
        = form_group_for f, :sic_code do
          .col-sm-8
            = f.text_field :sic_code, class: 'form-control'
      .col-sm-6
        = form_group_for f, :ticker_symbol do
          .col-sm-8
            = f.text_field :ticker_symbol, class: 'form-control'
    .row.form-group.text-center
      = f.submit t('views.shared.save'), class: 'btn btn-sm btn-primary'
      = link_to t('views.shared.cancel'), :back, class: 'btn btn-sm btn-danger'
