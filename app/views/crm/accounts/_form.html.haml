= form_for @account, html:{class:'form-horizontal'} do |f|
  .row
    .panel-group
      .panel
        .panel-heading
          %h4.panel-title
            %a{href:'#', data:{toggle:'collapse'}}= t('views.accounts.form.title')
        .panel-body
          .col-sm-6
            = form_group_for f, :name do
              .col-sm-8
                .input-line
                  = f.text_field :name, class: 'form-control'
          .col-sm-6
            = form_group_for f, :number do
              .col-sm-8
                .input-line
                  = f.text_field :number, class: 'form-control'
          .col-sm-6
            = form_group_for f, :email do
              .col-sm-8
                .input-line
                  = f.email_field :email, class: 'form-control'
          .col-sm-6
            = form_group_for f, :website do
              .col-sm-8
                .input-line
                  = f.text_field :website, class: 'form-control'
          .col-sm-6
            = form_group_for f, :phone do
              .col-sm-8
                .input-line
                  = f.text_field :phone, class: 'form-control'
          .col-sm-6
            = form_group_for f, :extension do
              .col-sm-8
                .input-line
                  = f.text_field :extension, class: 'form-control'
          .col-sm-6
            = form_group_for f, :industry do
              .col-sm-8
                .input-line
                  = f.text_field :industry, class: 'form-control'
          .col-sm-6
            = form_group_for f, :rating do
              .col-sm-8
                .input-line
                  = options_for_t_enum(f, :rating)
          .col-sm-6
            = form_group_for f, :ownership do
              .col-sm-8
                .input-line
                  = options_for_t_enum(f, :ownership)
          .col-sm-6
            = form_group_for f, :priority do
              .col-sm-8
                .input-line
                  = options_for_t_enum(f, :priority)
          .col-sm-6
            = form_group_for f, :employees do
              .col-sm-8
                .input-line
                  = options_for_t_enum(f, :employees)
          .col-sm-6
            = form_group_for f, :locations do
              .col-sm-8
                .input-line
                  = f.number_field :locations, min:0, class: 'form-control'
          .col-sm-6
            = form_group_for f, :sic_code do
              .col-sm-8
                .input-line
                  = f.text_field :sic_code, class: 'form-control'
          .col-sm-6
            = form_group_for f, :ticker_symbol do
              .col-sm-8
                .input-line
                  = f.text_field :ticker_symbol, class: 'form-control'
      .panel.panel-collapse
        .panel-heading
          %h4.panel-title
            %a{href:'#description', data:{toggle:'collapse'}}= t('views.accounts.form.description')
        #description.panel-collapse.collapse
          .panel-body
            .col-sm-12
              = form_group_for f, :description do
                .col-sm-8
                  .input-line
                    = f.text_area :description, class: 'form-control'
  .row
    .form-group
      .text-center.col-sm-12
        = f.submit t('views.shared.save'), class: 'btn btn-success'
        = link_to t('views.shared.cancel'), :back, class: 'btn btn-danger'
