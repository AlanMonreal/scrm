.card
  .card-header
    %p.lead= @user.person.full_name
    .card-actions
      = link_to new_core_user_path, class:'btn btn-default' do
        %i.fa.fa-plus
      = link_to edit_core_user_path(@user), class:'btn btn-default' do
        %i.fa.fa-pencil
      = link_to send_invite_core_user_path(@user), class:'btn btn-default' do
        %i.fa.fa-plane
  .card-block.table-responsive
    %table.table.table-condensed.table-striped.table-hover
      %tr
        %th=t('activerecord.attributes.core/person.full_name')
        %td= @user.person.full_name
        %th=t('activerecord.attributes.core/user.username')
        %td= @user.username
      %tr
        %th=t('activerecord.attributes.core/user.email')
        %td= @user.email
        %th=t('activerecord.attributes.core/person.mobile')
        %td= @user.person.mobile
      %tr
        %th=t('activerecord.attributes.core/person.phone')
        %td= @user.person.phone
        %th=t('activerecord.attributes.core/person.extension')
        %td= @user.person.extension
      %tr
        %th=t('activerecord.attributes.core/user.company')
        %td= @user.company
        %th=t('activerecord.attributes.core/user.department')
        %td= @user.department
      %tr
        %th=t('activerecord.attributes.core/user.division')
        %td= @user.division
        %th=t('activerecord.attributes.core/person.birthdate')
        %td= @user.person.birthdate
      %tr
        %th=t('activerecord.attributes.core/user.start_of_day')
        %td= @user.start_of_day
        %th=t('activerecord.attributes.core/user.end_of_day')
        %td= @user.end_of_day
      %tr
        %th=t('activerecord.attributes.core/user.sign_in_count')
        %td= @user.sign_in_count
        %th
        %td
      %tr
        %th=t('activerecord.attributes.core/user.current_sign_in_at')
        %td= l(@user.current_sign_in_at, format: :short) if @user.current_sign_in_at
        %th=t('activerecord.attributes.core/user.last_sign_in_at')
        %td= l(@user.last_sign_in_at, format: :short) if @user.last_sign_in_at
      %tr
        %th=t('activerecord.attributes.core/user.current_sign_in_ip')
        %td= @user.current_sign_in_ip
        %th=t('activerecord.attributes.core/user.last_sign_in_ip')
        %td= @user.last_sign_in_ip
      %tr
        %th=t('activerecord.attributes.core/user.confirmed_at')
        %td= l(@user.confirmed_at, format: :short) if @user.confirmed_at
        %th=t('activerecord.attributes.core/user.confirmation_sent_at')
        %td= @user.confirmation_sent_at
      %tr
        %th=t('activerecord.attributes.core/user.unconfirmed_email')
        %td= @user.unconfirmed_email
        %th=t('activerecord.attributes.core/user.invitation_limit')
        %td= @user.invitation_limit
      %tr
        %th=t('activerecord.attributes.core/user.invitation_created_at')
        %td= l(@user.invitation_created_at, format: :short) if @user.invitation_created_at
        %th=t('activerecord.attributes.core/user.invitation_sent_at')
        %td= l(@user.invitation_sent_at, format: :short) if @user.invitation_sent_at
